# FastAPI Configuration
ENV=development
DEBUG=true
HOST=0.0.0.0
PORT=8000
APP_NAME=Olympus MVP API

# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database Configuration
# Option 1: Use local PostgreSQL (recommended for development)
USE_LOCAL_DB=true
LOCAL_DATABASE_URL=postgresql://olympus:olympus_dev@localhost:5432/olympus_mvp

# Option 2: Use Supabase database directly (for production-like testing)
# USE_LOCAL_DB=false
# SUPABASE_DB_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Option 3: Override with custom database URL
# DATABASE_URL=postgresql://user:password@host:port/database

# Redis Configuration for Session Management
REDIS_URL=redis://localhost:6379

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000"]

# JWT Authentication Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Authentication Settings
# Session timeout in hours
SESSION_TIMEOUT_HOURS=24
# Refresh token lifetime in days
REFRESH_TOKEN_LIFETIME_DAYS=30

# External APIs (add as needed)
# STRIPE_SECRET_KEY=
# SENDGRID_API_KEY=