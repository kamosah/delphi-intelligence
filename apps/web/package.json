{
  "name": "@olympus/web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "clean": "rm -rf .next out dist node_modules/.cache",
    "graphql:introspect": "graphql-codegen --config codegen.introspect.yml",
    "graphql:generate": "graphql-codegen --config codegen.yml",
    "graphql:watch": "graphql-codegen --config codegen.yml --watch",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test-storybook": "test-storybook",
    "test-storybook:ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"npm run build-storybook -- --quiet && npx http-server storybook-static --port 6006 --silent\" \"wait-on tcp:127.0.0.1:6006 && npm run test-storybook\"",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report"
  },
  "dependencies": {
    "@assistant-ui/react": "^0.11.28",
    "@hookform/resolvers": "^5.2.2",
    "@olympus/ui": "*",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.38.0",
    "@tanstack/react-query": "^5.90.2",
    "ai": "^5.0.68",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.24",
    "graphql": "^16.11.0",
    "graphql-request": "^7.2.0",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.65.0",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@emotion/is-prop-valid": "^1.4.0",
    "@graphql-codegen/cli": "^6.0.0",
    "@graphql-codegen/introspection": "^5.0.0",
    "@graphql-codegen/typescript": "^5.0.2",
    "@graphql-codegen/typescript-operations": "^5.0.2",
    "@graphql-codegen/typescript-react-query": "^6.1.1",
    "@playwright/test": "^1.56.0",
    "@storybook/addon-docs": "^9.1.10",
    "@storybook/addon-interactions": "^9.0.0-alpha.10",
    "@storybook/addon-onboarding": "^9.1.10",
    "@storybook/nextjs": "^9.1.10",
    "@storybook/test": "^9.0.0-alpha.2",
    "@storybook/test-runner": "^0.23.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.50.0",
    "eslint-config-next": "^14.0.0",
    "eslint-plugin-storybook": "^9.1.10",
    "http-server": "^14.1.1",
    "postcss": "^8.4.0",
    "storybook": "^9.1.10",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.2.0",
    "wait-on": "^9.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
